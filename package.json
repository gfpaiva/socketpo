{
  "name": "socketpo",
  "version": "1.1.0",
  "description": "Node GraphQL Study Case",
  "main": "server.js",
  "private": true,
  "engines": {
    "node": "10.9.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon -e js,graphql -x node --inspect server.js",
    "dev:test": "NODE_ENV=test nodemon -e js,graphql -x node --inspect server.js",
    "heroku-postbuild": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
	"test": "NODE_ENV=test jest --detectOpenHandles --ci --forceExit",
	"test:client": "cd client && SKIP_PREFLIGHT_CHECK=true npm test && npm run test:coverage && npm run build"
  },
  "author": "Guilherme Paiva",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-subscriptions": "^1.0.0",
    "graphql-yoga": "^1.17.4",
    "helmet": "^3.15.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.13",
    "subscriptions-transport-ws": "^0.9.15"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/client/"
    ],
    "testEnvironment": "node"
  }
}
